<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fraghome_botton"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_xueya"
            android:layout_width="96dip"
            android:layout_height="96dip"
            android:layout_gravity="right"
            android:layout_marginBottom="16dip"
            android:layout_marginRight="16dip"
            android:background="@drawable/xueya_selector"
            android:enabled="true"
            android:onClick="btn_xueya_onclick" />

        <Button
            android:id="@+id/btn_xinlv"
            android:layout_width="96dip"
            android:layout_height="96dip"
            android:layout_gravity="right"
            android:layout_marginBottom="16dip"
            android:layout_marginRight="16dip"
            android:background="@drawable/xinlvji_selector"
            android:enabled="false" />

        <Button
            android:id="@+id/btn_shuimian"
            android:layout_width="96dip"
            android:layout_height="96dip"
            android:layout_gravity="right"
            android:layout_marginRight="16dip"
            android:background="@drawable/shuimian_selector"
            android:onClick="btn_shuimian_onclick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_wendu"
            android:layout_width="96dip"
            android:layout_height="96dip"
            android:layout_gravity="left"
            android:layout_marginBottom="16dip"
            android:layout_marginRight="16dip"
            android:background="@drawable/wenduji_selector"
            android:onClick="btn_wendu_onclick" />

        <Button
            android:id="@+id/btn_xueyang"
            android:layout_width="96dip"
            android:layout_height="96dip"
            android:layout_gravity="left"
            android:layout_marginBottom="16dip"
            android:layout_marginRight="16dip"
            android:background="@drawable/xueyangyi_selector"
            android:enabled="true"
            android:onClick="btn_xueyang_onclick" />

        <Button
            android:id="@+id/btn_dianzichen"
            android:layout_width="96dip"
            android:layout_height="96dip"
            android:layout_gravity="left"
            android:layout_marginRight="16dip"
            android:background="@drawable/dianzichen_selector"
            android:enabled="true"
            android:onClick="btn_dianzichen_onclick" />
    </LinearLayout>

</LinearLayout>